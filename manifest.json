{
  "manifest_version": 3,
  "name": "Dark Mode Document Viewer",
  "version": "0.1.0",
  "description": "Applies a readable dark theme to PDFs and documents.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "viewer/viewer.html",
        "viewer/pdf.worker.mjs"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}